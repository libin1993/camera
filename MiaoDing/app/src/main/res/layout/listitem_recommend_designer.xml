<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv_recommend_designer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="114.7dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_recommend_designer"
            android:layout_width="match_parent"
            android:layout_height="106.7dp"
            app:actualImageScaleType="centerCrop"
            app:roundAsCircle="false"
            app:roundedCornerRadius="3dp"/>

        <TextView
            android:id="@+id/tv_info_designer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_recommend_designer"
            android:paddingTop="18dp"
            android:paddingBottom="11dp"
            android:gravity="center"
            android:textColor="#717171"
            android:textSize="12sp"/>

        <android.support.v7.widget.CardView
            android:layout_width="75dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="94.7dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp">

            <TextView
                android:id="@+id/tv_name_designer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="none"
                android:maxLength="4"
                android:singleLine="true"
                android:textColor="#3D3D3D"
                android:textSize="14sp"/>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.v7.widget.CardView>