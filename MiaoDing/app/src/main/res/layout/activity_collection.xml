<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_bg"
                android:fitsSystemWindows="true">

    <include
        layout="@layout/widget_header_layout"/>


    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/rv_my_collection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="44dp">
    </com.github.jdsjlzx.recyclerview.LRecyclerView>

    <LinearLayout
        android:id="@+id/ll_null_collection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="211dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_null_collection"
            android:scaleType="fitCenter"
            android:visibility="visible"
            android:layout_marginTop="113dp"/>

        <TextView
            android:id="@+id/tv_my_collection"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_black_6dp"
            android:gravity="center"
            android:text="去逛逛"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </LinearLayout>

</RelativeLayout>