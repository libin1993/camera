<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_embroidery_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp">


    <cn.cloudworkshop.miaoding.view.CircleImageView
        android:id="@+id/img_embroidery_position"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ring_gray"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_embroidery_position"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_embroidery_position"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:textColor="@color/light_gray_7a"
        android:textSize="12sp"/>
</RelativeLayout>