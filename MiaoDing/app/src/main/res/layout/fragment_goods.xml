<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg">
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_goods_fragment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        app:tl_indicator_color="@color/dark_gray_22"
        app:tl_indicator_height="1dp"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/dark_gray_22"
        app:tl_textUnselectColor="@android:color/darker_gray"
        app:tl_textsize="16sp">
    </com.flyco.tablayout.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_goods_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_goods_fragment">
    </android.support.v4.view.ViewPager>

</RelativeLayout>